@using CADASTRO_DE_CLUBE_DE_FUTEBOL.Controllers;
<DOCTYPE html>
    <head>
        <title>Detalhe de Técnico</title>
    </head>
    <body>

        <h2>Detalhe de Técnico</h2>

        <div class="col-md-offset-2 col-md-10" style="color:red">
            @ViewBag.AlertMessage
        </div>

        <table class="table">
            <tr>
                <th></th>
                <th scope="col">
                    Id
                </th>
                <th scope="col">
                    Quantidade de Titulos
                </th>
                <th scope="col">
                    Quantidade de Times
                </th>
                <th scope="col">
                    Estrategia
                </th>
                <th>
                    Nome
                </th>
                <th>
                    Time
                </th>
                <th scope="col">
                    Idade
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink("Deletar", "deleteTecnico", new { id = item.Id })
                        @Html.ActionLink("Alterar", "editaTecnicoDetails", new { id = item.Id })
                    </td>
                    <td>
                        @Html.Encode(item.Id)
                    </td>
                    <td>
                        @Html.Encode(item.qtdTitulos)
                    </td>
                    <td>
                        @Html.Encode(item.qtdTimes)
                    </td>
                    <td>
                        @Html.Encode(item.estrategia)
                    </td>
                    <td>
                        @Html.Encode(item.nome)
                    </td>
                    <td>
                        @Html.Encode(item.time)
                    </td>
                    <td>
                        @Html.Encode(item.idade)
                    </td>
                </tr>
            }
        </table>

        <div>
            <a href="~/Home/Index" class="btn btn-danger">Voltar</a>
        </div>

    </body>
</DOCTYPE>




