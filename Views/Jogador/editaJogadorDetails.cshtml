
@{
    ViewBag.Title = "editaJogadorDetails";
}

@model CADASTRO_DE_CLUBE_DE_FUTEBOL.Models.clsJogador
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <DOCTYPE html>
        <head>
            <title>Formulário Jogador</title>
        </head>
        <body>

            <h2>Edita Jogador</h2>

