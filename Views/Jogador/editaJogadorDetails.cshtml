                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(Model => Model.golsMarcados, htmlAttributes: new { @class = "control-label col-md-2" })
                <div>
                    @Html.EditorFor(Model => Model.golsMarcados, new { HtmlTextWriterAttribute = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(Model => Model.golsMarcados, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(Model => Model.nome, htmlAttributes: new { @class = "control-label col-md-12" })
